<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TeacherHomeFragment"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:id="@+id/viewSchedule"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center_horizontal|center_vertical"
        android:padding="8dp"
        android:text="View Schedule"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewStudentAttendance"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:padding="8dp"
        android:text="View Student \nAttendance"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/curved_view_bg"/>

    <TextView
        android:id="@+id/viewBatchAttendance"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@id/viewSchedule"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"
        android:padding="8dp"
        android:text="View Batch \nAttendance"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/curved_view_bg"/>

    <TextView
        android:id="@+id/markAttendance"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@id/viewSchedule"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:padding="8dp"
        android:text="Mark Attendance"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/curved_view_bg"/>


        <TextView
            android:id="@+id/uploadMarks"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/markAttendance"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/curved_view_bg"
            android:gravity="center_horizontal|center_vertical"
            android:padding="8dp"
            android:text="Upload Marks"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/availableSlots"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@id/markAttendance"
        android:padding="8dp"
        android:text="Search Available \nSlots"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/curved_view_bg"/>

    </RelativeLayout>

</FrameLayout>