<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.StudentHomeFragment"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/viewSchedule"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/curved_view_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="View Class\nSchedule"/>
        <TextView
            android:id="@+id/viewAttendance"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/curved_view_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="View Subject\nAttendance"/>
        <TextView
            android:id="@+id/viewResult"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_below="@id/viewSchedule"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/curved_view_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="View Results"/>
        <TextView
            android:id="@+id/examSchedule"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_below="@id/viewResult"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/curved_view_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="View Exam\nSchedule"/>

        <TextView
            android:id="@+id/attendancePercent"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_below="@id/viewAttendance"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/curved_view_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="View Attendance\nPercent %"/>
    </RelativeLayout>

</FrameLayout>