<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.UpdateBatchSchedule"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#E489CFF0"
        app:cardCornerRadius="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="UPDATE BATCH SCHEDULE"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/f1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:text="BATCH ID"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_batch_id"
            android:layout_marginLeft="35dp"
            android:hint="Enter Batch ID"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_below="@id/tag"
        android:layout_marginLeft="190dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white">

            <AutoCompleteTextView
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:text="Select Day"
                android:textColor="@color/black"
                android:textSize="18dp"/>


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/f1"
        android:id="@+id/f2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:text="SLOT 1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#FCEAEAEA"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slot1"
            android:hint="ENTER SLOT 1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/f2"
        android:id="@+id/f3">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="SLOT 2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#FCEAEAEA"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slot2"
            android:hint="ENTER SLOT 2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f3"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="#FCEAEAEA"
            android:text="SLOT 3"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slot3"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:hint="ENTER SLOT 3"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/f4"
        android:id="@+id/f5">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="SLOT 4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#FCEAEAEA"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slot4"
            android:hint="ENTER SLOT 4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/f6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f5"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="#FCEAEAEA"
            android:text="SLOT 5"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slot5"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:hint="ENTER SLOT 5"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/f6">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateBtn"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:text="UPDATE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="#E489CFF0"/>
    </LinearLayout>

</RelativeLayout>



