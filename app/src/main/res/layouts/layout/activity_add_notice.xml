<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FFFFFF"
    tools:context=".AddNotice">

    <androidx.cardview.widget.CardView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#E489CFF0"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ADD NOTICE"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center_horizontal"
        android:hint="HEADING..."
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#861B1A1A"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:hint="main body of the notice.."
        android:textColor="@color/black"
        android:textColorHint="#861B1A1A"
        android:textSize="22sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/notice"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#42B6EA"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>