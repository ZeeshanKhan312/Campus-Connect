<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Admin.StudentManagement">

    <androidx.cardview.widget.CardView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#E489CFF0"
        app:cardCornerRadius="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="STUDENT MANAGEMENT"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/addStudent"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_below="@id/tag"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Add Student"/>
    <TextView
        android:id="@+id/removeStudent"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_below="@id/tag"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Remove Student"/>
    <TextView
        android:id="@+id/searchStudent"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_below="@id/addStudent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Search Student"/>
    <TextView
        android:id="@+id/updateFee"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_below="@id/removeStudent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Update Fee\nStatus"/>

</RelativeLayout>