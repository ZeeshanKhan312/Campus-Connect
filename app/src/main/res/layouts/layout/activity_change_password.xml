<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6FFFFFF"
    tools:context=".Teacher.ChangePassword">

    <androidx.cardview.widget.CardView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#E489CFF0"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:text="PASSWORD CHANGE"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/oldPasw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center_horizontal"
        android:hint="ENTER OLD PASSWORD"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#861B1A1A"
        android:textSize="22sp"
        android:textStyle="italic"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Password"
        android:textSize="10sp"
        android:layout_alignStart="@id/oldPasw"
        android:layout_alignTop="@id/oldPasw"
        android:textColor="#A4000000"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp"/>


    <EditText
        android:id="@+id/newPasw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/oldPasw"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center_horizontal"
        android:hint="ENTER NEW PASSWORD"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#861B1A1A"
        android:textSize="22sp"
        android:textStyle="italic"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="10sp"
        android:layout_alignStart="@id/newPasw"
        android:layout_alignTop="@id/newPasw"
        android:textColor="#A4000000"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/rePasw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPasw"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/curved_view_bg"
        android:gravity="center_horizontal"
        android:hint="RE ENTER PASSWORD"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#861B1A1A"
        android:textSize="22sp"
        android:textStyle="italic"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re Enter Password"
        android:textSize="10sp"
        android:layout_alignStart="@id/rePasw"
        android:layout_alignTop="@id/rePasw"
        android:textColor="#A4000000"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/rePasw"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#42B6EA"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>