<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Admin.UpdateFees">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          android:id="@+id/tag"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:layout_centerHorizontal="true"
          app:cardBackgroundColor="#E489CFF0"
          app:cardCornerRadius="8dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:text="UPDATE SEMESTER"
              android:textColor="@color/white"
              android:textSize="28dp"
              android:textStyle="bold" />
      </androidx.cardview.widget.CardView>

      <EditText
          android:id="@+id/batchId"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:layout_below="@id/tag"
          android:layout_marginStart="30dp"
          android:layout_marginTop="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginBottom="30dp"
          android:background="@drawable/curved_view_bg"
          android:hint="Enter Batch ID"
          android:padding="10dp"
          android:textColor="@color/black"
          android:textStyle="italic"
          android:textColorHint="#D0191919"
          android:textSize="20sp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Batch ID"
          android:textSize="10sp"
          android:layout_alignStart="@id/batchId"
          android:layout_alignTop="@id/batchId"
          android:textColor="#A4000000"
          android:layout_marginStart="12dp"
          android:layout_marginBottom="12dp"/>

      <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
          android:id="@+id/autoText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_below="@id/batchId"
          app:boxBackgroundColor="@color/white">

          <AutoCompleteTextView
              android:id="@+id/semester"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="none"
              android:text="Select Semester"
              android:padding="5dp"
              android:background="@drawable/curved_view_bg"
              android:textColor="@color/black"
              android:textSize="22sp"
              android:textStyle="italic"/>
      </com.google.android.material.textfield.TextInputLayout>

      <HorizontalScrollView
          android:id="@+id/table"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/autoText"
          android:layout_marginTop="30dp">

          <TableLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <androidx.appcompat.widget.AppCompatButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:background="#FCEAEAEA"
                      android:text="DAY"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:textStyle="bold" />

                  <androidx.appcompat.widget.AppCompatButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:background="#FCEAEAEA"
                      android:text="SLOT 1"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:textStyle="bold" />

                  <androidx.appcompat.widget.AppCompatButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:background="#FCEAEAEA"
                      android:text="SLOT 2"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:textStyle="bold" />

                  <androidx.appcompat.widget.AppCompatButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:background="#FCEAEAEA"
                      android:text="SLOT 3"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:textStyle="bold" />

                  <androidx.appcompat.widget.AppCompatButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:background="#FCEAEAEA"
                      android:text="SLOT 4"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:textStyle="bold" />

                  <androidx.appcompat.widget.AppCompatButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:background="#FCEAEAEA"
                      android:text="SLOT 5"
                      android:textColor="@color/black"
                      android:textSize="20dp"
                      android:textStyle="bold" />

              </TableRow>

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:layout_margin="10dp"
                      android:text="Monday"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/m1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/m2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/m3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/m4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/m5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>
              </TableRow>

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:layout_margin="10dp"
                      android:text="Tuesday"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/t1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/t2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/t3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/t4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/t5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>
              </TableRow>

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:layout_margin="10dp"
                      android:text="Wednesday"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/w1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"
                      />

                  <EditText
                      android:id="@+id/w2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/w3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/w4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/w5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>
              </TableRow>

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:layout_margin="10dp"
                      android:text="Thursday"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/th1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/th2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/th3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER" />

                  <EditText
                      android:id="@+id/th4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/th5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>
              </TableRow>

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:layout_margin="10dp"
                      android:text="Friday"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:textStyle="bold" />

                  <EditText
                      android:id="@+id/f1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/f2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/f3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/f4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>

                  <EditText
                      android:id="@+id/f5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:hint="ENTER"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textSize="18sp"/>
              </TableRow>

          </TableLayout>

      </HorizontalScrollView>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/submit"
          android:layout_width="wrap_content"
          android:layout_height="?attr/actionBarSize"
          android:layout_below="@id/table"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="30dp"
          android:background="#E489CFF0"
          android:text="SAVE"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="@color/white"/>

  </RelativeLayout>

</ScrollView>