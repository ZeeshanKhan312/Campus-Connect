<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Admin.SearchBatch">

    <androidx.cardview.widget.CardView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#E489CFF0"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="SEARCH BATCH"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#E489CFF0"
        app:defaultQueryHint="Enter the Batch ID"
        app:iconifiedByDefault="false" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="2">
                <TextView
                    android:id="@+id/batchId"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/curved_view_bg"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="Batch ID"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/cYear"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/curved_view_bg"
                    android:text="cYear"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/cName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/curved_view_bg"
                    android:text="cName"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/cDuration"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/curved_view_bg"
                    android:text="cDuration"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/cFees"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/curved_view_bg"
                    android:text="cFees"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/curSem"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/curved_view_bg"
                    android:text="curSem"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="20sp"/>

            </androidx.gridlayout.widget.GridLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                app:cardBackgroundColor="#E489CFF0"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="STUDENTS LIST"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatButton
