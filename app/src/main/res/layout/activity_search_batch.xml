                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:text="Thursday"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
